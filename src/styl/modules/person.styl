/* 个人信息 */
.person {
  box-shadow-normal();
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 320px;
  padding: base_padding 20px;
  border-radius: border_radius;
  background-color: bgc_white;
}

.person-avatar {
  position: relative;
  width: 110px;
  border-radius: 50%;
  margin-bottom: 20px;

  img {
    width: 100%;
    height: 100%;
    border-radius: 50%;
  }
}

.person-nickname {
  margin-bottom: 10px;
  text-align: center;
  color: title_color;
  font-weight: 560;
}

.person-motto {
  color: text_color;
  font-weight: 580;
  margin-bottom: 20px;
}

.person-data {
  display: flex;
  justify-content: space-between;
  width: 100%;
  border-top: 1px solid #e2e8f0;
  border-bottom: 1px solid #e2e8f0;
  padding: 15px 40px;
  margin-bottom: 20px;
}

.person-data--article {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.person-data--article-icon {
  display: flex;
  align-items: center;
  color: text_color;
  &::before {
    display: inline-block;
    width: 18px;
    height: 18px;
    margin-right: 8px;
    background: url("img/article.svg");
    background-size: contain;
    content: "";
  }
}


.person-data--article-num {
  margin-top: 10px;
}
 
.person-data--reader {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.person-data--reader-icon {
  display: flex;
  align-items: center;
  color: text_color;
  &::before {
    display: inline-block;
    width: 18px;
    height: 18px;
    margin-right: 8px;
    background: url("img/reader.svg");
    background-size: contain;
    content: "";
  }
}

.person-data--reader-num {
  margin-top: 10px;
}

.person-tag {
  max-height: 280px;
  margin-bottom: 20px;
  overflow: hidden;
  color: text_color;
  font-weight: 500;
  cursor: pointer;
}

.person-nav {
  display: inline-grid;
  grid-template-columns: 1fr 1fr 1fr;
  column-gap: 25px;
}

.person-nav--item {
  width: 25px;
  height: 25px;
}

.person-nav--gth {
  background: url("img/github.svg");
  background-size: contain;
}

.person-nav--bili {
  background: url("img/bili.svg");
  background-size: contain;
}

.person-nav--email {
  background: url("img/email.svg");
  background-size: contain;
}