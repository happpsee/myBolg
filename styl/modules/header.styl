/* 头部部分 */
.header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  width: 100%;
  height: 100px;
}

.header-logo {
  display: flex;
  align-items: center;
  height: 70px;
}

.header-logo--icon {
  width: 70px;
}

.header-logo--title {
  margin-left: 10px;
}

.header-search {
  box-shadow-normal()
  width: 450px;
  padding: 10px 20px;
  color: text_color;
  border-radius: border_radius;
  background-color: bgc_white;
    &::placeholder {
      color: input_placeholder_color;
    }
}


.header-list {
  display: flex;
  column-gap: 40px;

  .active {
    font-weight: 560;
    color: text_color_main;  
  }

}

.header-list--icon {
  width: 30px;
}

.header-list--item {
  color: text_color;
}