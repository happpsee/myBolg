/* 头部部分 */
.header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  width: 100%;
  height: 100px;
}

.header-logo {
  display: flex;
  align-items: center;
  height: 70px;
}

.header-logo--icon {
  width: 70px;
}

.header-logo--title {
  white-space: nowrap;
  margin-left: 10px;
}

.header-search {
  box-shadow-normal()
  width: 450px;
  padding: 10px 20px;
  color: text_color;
  border-radius: border_radius;
  background-color: bgc_white;
    &::placeholder {
      color: input_placeholder_color;
    }
}


.header-list {
  display: flex;
  column-gap: 40px;

  .active {
    font-weight: 560;
    color: text_color_main;  
  }

}

.header-list--icon {
  width: 30px;
}

.header-list--item {
  transition() 
  color: text_color;
  white-space: nowrap;

  &:hover {
    transform: scale(1.3);
  }
}

.header-list--log-reg-btn {

  display: flex;
  align-items: center;
  justify-content: space-between;
  column-gap: 20px;
  position: relative;

  &:hover {
    transform: none;
  }
  a {
      transition() 
  }
  a:hover {

    transform: scale(1.3);
  }

  &::after {
    content: "";
    position absolute;
    top: 0;
    left: 50%;
    display: block;
    width: 2px;  
    height: 90%;
    transform: translateX(-50%);
    background-color: border_color;
  }
}