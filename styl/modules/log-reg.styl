
.login-container {
  position: absolute;
  left: 50%;
  top: 50%;
  padding: 20px;
  border-radius: border_radius;
  background-color: #fff;
  overflow: hidden;
  transform: translate(-50%, -50%);
  &::after {
    position: absolute;
    left: -67px;
    bottom: -64px;
    display: block;
    content: "";
    width: 200px;
    height: 200px;
    background: url("../public/img/moon.png");
    background-size: contain;
    transform: rotate(-30deg);
  }
}

.login-head {
  display: flex;
  justify-content: space-between;
  height: 32px; 
}

.login-title {
  cursor: default;
  user-select: none;
}

.login-close {
  transition() 
  display: block;
  width: 18px;
  height: 18px;
  background: url("../public/img/close.svg");
  background-size: 18px;
  cursor: pointer;
  &:hover {
    transform: scale(1.2) rotate(30deg);
  }
}


.login-main {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 10px 40px;
  padding-bottom: 0;
}

.login-main-left {
  // width: 300px;
  // height: 300px;
  // background-color: pink;
}


.login-method {
  position: relative;
  display: flex;
  justify-content: center;
  column-gap: 40px;
  margin-bottom: 20px;
  cursor pointer;
  user-select: none;
  &::after {
    content: "";
    position absolute;
    left: 50%;
    top: 50%;
    width: 2px;
    height: 100%;
    background-color: border_color;
    transform: translate(-50%, -50%);
  }

  .active {
    color: text_color_stronger;
  }
}

.filp-card {
  transition() 
  position: relative;
  width: 300px;
  height: 205px;
  perspective: 1000px;
  min-height: 180px;
  & .active {
    transition: transform 0.8s;
    transform: rotate(0deg);
  }

  &.back {
   
  }
}

.filp-card-inner {
  position: absolute;
  transform-style: preserve-3d;
  backface-visibility: hidden;
  transform: rotateY(180deg);
}

.filp-card-back {
  position: absolute;
  transform-style: preserve-3d;
  width: 100%;
  height: 100%;
  transform: rotateY(180deg);
  backface-visibility: hidden;
}




.login-form {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}
.login-form-phone {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.form-phone_label {
  width: 20px;
  height: 20px;
  background: url("../public/img/phone.svg");
  background-size: 20px;
}

.form-vertificate_label {
  width: 22px;
  height: 22px;
  background: url("../public/img/vertificate.svg");
  background-size: 22px;
}

.form-items {
  position relative;
  padding-bottom: 20px;
}

.form-group {
  transition()
  display: flex;
  align-items: center;
  width: 300px;
  padding: 0 12px;

  font-weight: 500;
  border: 1px solid #e2e8f0;  
  border-radius: border_radius;
  &:has(.control-input:focus) {
    box-shadow-normal()  
  }
}

.form-error {
  position absolute;
  left: 43px;
  bottom: 2px;
  color: #ef4444;
}

.submit-btn {
  transition() 
  width: 280px;
  height: 50px;
  line-height: 50px;
  text-align: center;
  border: 1px solid #e2e8f0;
  border-radius: border_radius;
  cursor: pointer;
  user-select: none;
  &:hover {
    box-shadow-normal()  
  }
}


.form-account_label {
  width: 18px;
  height: 18px;
  background: url("../public/img/login-account.svg");
  background-size: 18px;
}

.form-pwd_label {
  width: 18px;
  height: 18px;
  background: url("../public/img/login-pwd.svg");
  background-size: 18px;
}


.control-label {
  margin-right: 10px;
}

.control-input {
  color: text_color;
  flex-grow: 1;
  height: 40px;
}

.login-footer {
  display: flex;
  align-items: center;
  justify-content: center; 
  margin: 20px 0;  
}

.login-footer--hit {
  color: text_color;
  cursor: pointer;
}

.login-footer--hit_strong {
  margin: 0 5px;
  font-weight: 600;
  color: text_color_stronger; 
}




